{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Short Studio MVP",
  "version": "0.1.0",
  "identifier": "com.shortstudio.mvp",
  "build": {
    "beforeDevCommand": "vite",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "vite build && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Short Studio MVP",
        "width": 1024,
        "height": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            { "identifier": "dialog:default", "allow": [] },
            { "identifier": "shell:allow-execute", "allow": [
              { "name": "python3", "cmd": "python3", "args": true, "sidecar": false },
              { "name": "verify-system", "cmd": "sh", "args": ["./scripts/verify_system.sh"] },
              { "name": "install-python-deps", "cmd": "sh", "args": ["./scripts/install_python_deps.sh"] },
              { "name": "install-emoji-fonts", "cmd": "sh", "args": ["./scripts/install_emoji_fonts.sh"] }
            ]}
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../scripts/whisper_transcribe.py"
    ]
  },
  "plugins": {
    "shell": {}
  }
}